@{
    ViewBag.Title = "系统表单管理";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script>
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 139.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        $("#gridTable").jqGrid({
            url: "../../AuthorizeManage/ModuleForm/GetPageListJson",
            datatype: "json",
            height: $(window).height() - 139.5,
            autowidth: true,
            colModel: [
                { label: '主键', name: 'Id', hidden: true },
                { label: '模块主键', name: 'ModuleId', hidden: true },
                { label: '表单名称', name: 'FullName', index: "FullName", width: 120, align: "left" },
                { label: '表单编码', name: 'EnCode', index: "EnCode", width: 120, align: "left" },
                { label: '所属模块', name: 'ModuleName', index: "ModuleName", width: 120, align: "left" },
                {
                    label: "状态", name: "EnabledMark", index: "EnabledMark", width: 60, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 1) {
                            return '<span  class=\"label label-success\">启用</span>';
                        } else if (rowObject.EnabledMark == 0) {
                            return '<span  class=\"label label-danger\">停用</span>';
                        } else {
                            return '<span  class=\"label label-info\">草稿</span>';
                        }
                    }
                },
                { label: "创建人", name: "CreateUserName", index: "CreateUserName", width: 150, align: "left" },
                {
                    label: "创建时间", name: "CreateDate", index: "CreateDate", width: 150, align: "left",
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd hh:mm:ss');
                    }
                },
                { label: "编辑人", name: "ModifyUserName", index: "ModifyUserName", width: 150, align: "left" },
                {
                    label: "编辑时间", name: "ModifyDate", index: "ModifyDate", width: 150, align: "left",
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd hh:mm:ss');
                    }
                },
                { label: "备注", name: "Description", index: "Description", width: 200, align: "left" }
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [10, 25, 50, 100],
            pager: "#gridPager",
            sortname: 'SortCode',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $("#" + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $("#" + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = { Keyword: $("#txt_Keyword").val() };
            searchGrid(queryJson);
        });
    }
    //查询函数
    function searchGrid(queryJson) {
        $("#gridTable").jqGrid('setGridParam', {
            url: "../../AuthorizeManage/ModuleForm/GetPageListJson",
            postData: { queryJson: JSON.stringify(queryJson) },
        }).trigger('reloadGrid');
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: "Form",
            title: '新增系统表单',
            url: '/AuthorizeManage/ModuleForm/Form',
            width: "1100px",
            height: "700px",
            btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    };
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "FrmBuider",
                title: '编辑系统表单',
                url: '/AuthorizeManage/ModuleForm/Form?keyValue=' + keyValue,
                width: "1100px",
                height: "700px",
                btn: null,
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //表单预览
    function btn_formpreview() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        var frmname = $("#gridTable").jqGridRowValue("FullName");
        if (keyValue) {
            top.tablist.newTab({ id: keyValue, title: '系统表单预览【' + frmname + '】', closed: true, icon: "fa fa fa-eye", url: '/AuthorizeManage/ModuleForm/FormPreview?keyValue=' + keyValue });
        }
        else {
            dialogMsg('请选择要设计的表单模板！', 0);
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        if (keyValue) {
            $.RemoveForm({
                url: "../../AuthorizeManage/ModuleForm/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#gridTable").trigger("reloadGrid");
                }
            })
        } else {
            dialogMsg('请选择需要删除的表单模板！', 0);
        }
    }
    //禁用
    function btn_disabled() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        if (keyValue) {
            $.ConfirmAjax({
                msg: "请确认是否要【停用】委托规则？",
                url: "../../AuthorizeManage/ModuleForm/SaveForm?keyValue=" + keyValue,
                param: { EnabledMark: false },
                success: function (data) {
                    $("#gridTable").trigger("reloadGrid");
                }
            })
        } else {
            dialogMsg('请选择要停用的表单模板！', 0);
        }
    }
    //启用
    function btn_enabled() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        if (keyValue) {
            $.ConfirmAjax({
                msg: "请确认是否要【启用】委托规则？",
                url: "../../AuthorizeManage/ModuleForm/SaveForm?keyValue=" + keyValue,
                param: { EnabledMark: true },
                success: function (data) {
                    $("#gridTable").trigger("reloadGrid");
                }
            })
        } else {
            dialogMsg('请选择要启用的表单模板！', 0);
        }
    }
</script>
<div class="center-Panel">
    <div class="titlePanel">
        <div class="title-search">
            <table>
                <tr>
                    <td>
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                    </td>
                    <td style="padding-left: 5px;">
                        <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </td>
                </tr>
            </table>
        </div>
        <div class="toolbar">
            <div class="btn-group">
                <a id="bt-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                <a id="bt-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                <a id="bt-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                <a id="bt-formlayout" class="btn btn-default" onclick="btn_formpreview()"><i class="fa fa-eye"></i>&nbsp;预览</a>
                <a id="bt-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
            </div>
            <div class="btn-group">
                <a id="bt-disabled" class="btn btn-default" onclick="btn_disabled()"><i class="fa fa-stop"></i>&nbsp;停用</a>
                <a id="bt-enabled" class="btn btn-default" onclick="btn_enabled()"><i class="fa fa-play"></i>&nbsp;启用</a>
            </div>
        </div>
    </div>
    <div class="gridPanel">
        <table id="gridTable"></table>
        <div id="gridPager"></div>
    </div>
</div>
